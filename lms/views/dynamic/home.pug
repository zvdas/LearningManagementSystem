doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Home
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", crossorigin="anonymous")
    body 
        div.container
            form(method="POST", action="/add")
                div.card(style="margin-top: 10%; padding-top: 5%; padding-bottom: 5%;")
                    div(class="row justify-content-center")
                        div.col-6
                            h2 New to EGyan? Sign up for free!
                            div.mb-3
                                div(class="row g-2")
                                    div.col-8 Full name
                                        input.form-control(name="userName", type="text")
                                    div.col Type
                                        select.form-control(name="userType", type="text")
                                            option(value="Student") Student
                                            option(value="Instructor") Instructor  
                            div.mb-3 Email ID
                                input.form-control(name="userEmail", type="email", placeholder="you@example.com")
                            div.mb-3
                                div(class="row g-2")
                                    div.col Password
                                        input.form-control(name="userPassword", type="password")
                                    div.col Confirm Password
                                        input.form-control(type="password")
                            div(class="mb-3  d-grid gap-2")
                                button(class="btn btn-primary", type="submit") Register Now!
                        div.col-5
                            h2 Have an account? Log in now!
                            div.mb-3 Email ID
                                input.form-control(type="email")
                            div.mb-3 Password
                                input.form-control(type="password")
                            div(class="mb-3 d-grid gap-2")
                                button(class="btn btn-primary", type="submit") Login